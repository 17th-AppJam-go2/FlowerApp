<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.UserRegisterActivity">

    <ImageView
            android:id="@+id/colorFlower"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@drawable/color_flower_icon"/>

    <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18.5sp"
            android:textColor="#000000"
            android:layout_below="@+id/colorFlower"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="꽃피면"/>

    <LinearLayout
            android:id="@+id/nameForm"
            android:layout_width="280dp"
            android:layout_height="49dp"
            android:background="@drawable/edittext_background"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/appname"
            android:gravity="center_vertical"
            android:layout_marginTop="64dp">

        <ImageView
                android:id="@+id/nameIcon"
                android:layout_width="27dp"
                android:layout_height="14dp"
                android:src="@drawable/name_icon"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="16dp"/>

        <EditText
                  android:id="@+id/nameEdit"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@android:color/transparent"
                  android:hint="이름"
                  android:textColorHint="#000000"
                  android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/idForm"
            android:layout_width="280dp"
            android:layout_height="49dp"
            android:background="@drawable/edittext_background"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/appname"
            android:gravity="center_vertical"
            android:layout_marginTop="64dp">

        <ImageView
                android:id="@+id/idIcon"
                android:layout_width="27dp"
                android:layout_height="14dp"
                android:src="@drawable/id_icon"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="16dp"/>

        <EditText
                android:id="@+id/idEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="이름"
                android:textColorHint="#000000"
                android:textColor="#000000"/>
    </LinearLayout>



</RelativeLayout>