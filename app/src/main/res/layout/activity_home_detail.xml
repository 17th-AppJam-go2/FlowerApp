<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.HomeDetailActivity">

    <RelativeLayout
            android:id="@+id/barForm"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingTop="20dp"
            android:background="#ffb7b9">
        <TextView
                android:id="@+id/barTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MONDAY FLOWER"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="19sp"
                android:textColor="@android:color/black"/>
        <ImageView
                   android:id="@+id/favoriteButton"
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/bottom_four"
                   android:layout_alignParentEnd="true"
                   android:layout_marginEnd="15dp"
                   android:layout_marginBottom="5dp"
                   android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    
    <ImageView android:id="@+id/titleImage"
               android:layout_below="@id/barForm"
               android:layout_width="match_parent"
               android:layout_height="185dp"
               android:src="@drawable/ic_launcher_foreground"/>

    <TextView
            android:id="@+id/storeTitle"
            android:layout_below="@id/titleImage"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:text="MONDAY FLOWERS"/>

    <TextView
            android:id="@+id/introText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#80000000"
            android:text="특별한 순간을 선사하는 아름다움을 지금 선물하세요.
자연의 컬러는 많은 힘이 있습니다. 당신에게 부족한 컬러를 꽃으로 채워보세요."
            android:layout_below="@id/storeTitle"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"/>
    
    <ImageView
               android:id="@+id/timeIcon"
                android:layout_width="15dp"
               android:layout_height="15dp"
                android:src="@drawable/time_icon"
                android:layout_below="@id/introText"
                android:layout_marginStart="18dp"
                android:layout_marginTop="19dp"/>
    <TextView
            android:id="@+id/dayText"
                android:layout_width="wrap_content"
              android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="평일"
            android:layout_toEndOf="@id/timeIcon"
            android:layout_below="@id/introText"
            android:layout_marginTop="19dp"
            android:layout_marginStart="6dp"
            android:textColor="#000000"/>
    <TextView
            android:id="@+id/dayTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#000000"
            android:layout_below="@id/dayText"
            android:layout_alignStart="@+id/dayText"
            android:text="10:00 ~ 18:00"/>
    
    <TextView
            android:id="@+id/weekText"
            android:text="주말"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_below="@id/introText"
            android:layout_marginTop="19dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/weekTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#000000"
            android:layout_below="@id/weekText"
            android:layout_alignStart="@+id/weekText"
            android:text="09:00 ~ 21:00"/>

    <ImageView
            android:id="@+id/phoneIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/phone_flower_icon"
            android:layout_below="@id/timeIcon"
            android:layout_alignStart="@id/timeIcon"
            android:layout_marginTop="30dp"/>

    <TextView
            android:id="@+id/phoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#000000"
            android:layout_alignStart="@id/dayTimeText"
            android:layout_below="@id/dayTimeText"
            android:layout_marginTop="14dp"
            tools:text="1522-3743"/>

    <ImageView
            android:id="@+id/addressIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/bottom_one"
            android:layout_below="@id/phoneIcon"
            android:layout_alignStart="@id/phoneIcon"
            android:layout_marginTop="20dp"/>

    <TextView
            android:id="@+id/addressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#000000"
            tools:text="서울특별시 강남구 도산대로49길 30 (신사동)"
            android:layout_alignStart="@id/phoneText"
            android:layout_below="@id/phoneText"
            android:layout_marginTop="18dp"/>

    <View
          android:id="@+id/line"
         android:layout_width="match_parent"
          android:layout_height="9dp"
          android:background="#c7c7c7"
          android:layout_below="@id/addressIcon"
          android:layout_marginTop="10dp"/>
    
    <ImageView android:id="@+id/rankingIcon"
                android:layout_width="15dp"
               android:layout_height="15dp"
                android:src="@drawable/ranking_icon"
                android:layout_below="@id/line"
                android:layout_marginStart="18dp"
                android:layout_marginTop="20dp"/>
    <TextView
            android:id="@+id/kindText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13.3sp"
            android:layout_below="@id/line"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@id/addressText"
            android:textColor="#000000"
            android:text="FLOWER"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/informationRecyclerView"
            android:layout_width="match_parent"
            android:layout_marginStart="14dp"
            android:layout_below="@+id/rankingIcon"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="20dp"
            tools:listitem="@layout/item_information_recycler"
            android:layout_height="match_parent"/>

</RelativeLayout>